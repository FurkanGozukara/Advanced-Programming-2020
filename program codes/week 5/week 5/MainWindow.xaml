<Window x:Class="week_5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:week_5"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox Name="txtUserEmail" HorizontalAlignment="Left" Height="59" Margin="18,28,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="184" GotFocus="txtUserEmail_GotFocus" LostFocus="txtUserEmail_LostFocus"/>
        <PasswordBox x:Name="txtPassword" HorizontalAlignment="Left" Margin="257,50,0,0" VerticalAlignment="Top" Height="37" Width="148"/>
        <Label Content="enter your password below" HorizontalAlignment="Left" Margin="251,19,0,0" VerticalAlignment="Top"/>
        <Button Name="btnLogin" Content="login" HorizontalAlignment="Left" Margin="439,30,0,0" VerticalAlignment="Top" Width="89" Height="57" Click="btnLogin_Click"/>
        <Label Name="lblInfo" Content="not logged in" HorizontalAlignment="Left" Margin="298,-1,0,0" VerticalAlignment="Top" Width="436"/>

    </Grid>
</Window>
